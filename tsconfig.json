{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2024",
      "DOM"
    ],
    "declaration": true,
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "build",
    "wasm_modules"
  ]
}